{
  "name": "claude-os-mcp-cloudflare",
  "version": "1.0.0",
  "description": "Claude OS MCP Server on Cloudflare Workers",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "tail": "wrangler tail",
    "d1:create": "wrangler d1 create claude-os-db",
    "d1:import": "wrangler d1 execute claude-os-db --file=schema.sql",
    "vectorize:create": "wrangler vectorize create claude-os-vectors --dimensions=768 --metric=cosine"
  },
  "keywords": [
    "mcp",
    "knowledge-base",
    "rag",
    "cloudflare",
    "workers"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240129.0",
    "typescript": "^5.3.3",
    "wrangler": "^3.22.0"
  }
}
